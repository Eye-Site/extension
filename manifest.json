{
    "name": "Eye Site",
    "manifest_version": 3,
    "version": "1.0.0",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["eyesite.css"],
            "matches": ["<all_urls>"]
        }
    ]
}